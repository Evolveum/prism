<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<name>midPoint project</name>
	<groupId>com.evolveum.midpoint</groupId>
	<artifactId>project</artifactId>
	<version>1.8-SNAPSHOT</version>
	<packaging>pom</packaging>
	<description>Utility module to compile all of the maven based midPoint projects.</description>
	<organization>
		<name>evolveum</name>
		<url>http://www.evolveum.com</url>
	</organization>
	<licenses>
		<license>
			<name>CDDL v1.0</name>
			<url>http://www.sun.com/cddl/cddl.html</url>
			<distribution>repo</distribution>
			<comments>A business-friendly OSS license</comments>
		</license>
	</licenses>
	<issueManagement>
		<system>Atlassian JIRA</system>
		<url>http://jira.evolveum.com/</url>
	</issueManagement>
	<scm>
		<connection>scm:svn:http://svn.evolveum.com/midpoint/</connection>
		<developerConnection>scm:svn:https://svn.evolveum.com/midpoint/</developerConnection>
		<tag>HEAD</tag>
		<url>https://fisheye.evolveum.com/browse/MidPoint/trunk/midpoint/</url>
	</scm>
	<repositories>
		<repository>
			<id>central</id>
			<name>repo</name>
			<url>http://repo.evolveum.com/repo</url>
		</repository>
	</repositories>
	<properties>
        <!-- Build system options -->
		<project.source.version>1.6</project.source.version>
		<clover.version>3.0.5</clover.version>
	</properties>
	<modules>
		<module>build-system</module>
		<module>infra</module>
		<module>repo</module>
		<module>provisioning</module>
		<module>model</module>
		<module>gui</module>
	</modules>
	<profiles>
		<profile>
			<id>clover</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>com.atlassian.maven.plugins</groupId>
						<artifactId>maven-clover2-plugin</artifactId>
						<version>${clover.version}</version>
                        <!--  executions>
                            <execution>
                                <id>clover</id>
                                <goals>
                                    <goal>setup</goal>
                                    <goal>optimize</goal>
                                    <goal>snapshot</goal>
                                </goals>
                            </execution>
                            <execution>
                                <phase>verify</phase>
                                <goals>
                                    <goal>clover</goal>
                                    <goal>log</goal>
                                    <goal>check</goal>
                                </goals>
                            </execution>
                        </executions-->
						<configuration>
							<targetPercentage>0%</targetPercentage>
							<includesTestSourceRoots>true</includesTestSourceRoots>
							<jdk>${project.source.version}</jdk>
							<generateXml>true</generateXml>
							<generateHistorical>true</generateHistorical>
							<multiproject>true</multiproject>
						</configuration>
					</plugin>
				</plugins>
			</build>
			<reporting>
				<plugins>
					<plugin>
						<groupId>com.atlassian.maven.plugins</groupId>
						<artifactId>maven-clover2-plugin</artifactId>
						<version>${clover.version}</version>
					</plugin>
				</plugins>
			</reporting>
		</profile>
		<profile>
			<id>sanity</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<modules>
				<module>testing</module>
			</modules>
		</profile>
	</profiles>
</project>
