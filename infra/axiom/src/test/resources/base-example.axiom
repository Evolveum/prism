model model-header {

    documentation """
        This is showcase of baseline Axiom model header.
        
        Standard model header should contain:
          - description (optional)
          - namespace (required)
          - version (required)
          - prefix (optional
        """;

    namespace "https://ns.evolveum.com/example/axiom/model-header";
    version "0.0.1";
    
    type Example {
        documentation """
            Example complex type. This type does not have supertype.
            Type may contain items.
        
        """;
        
        property name {
            type string;
        }
        
        container nested {
            type AxiomTypeDefinition;
        }
    }
    
    object User {
        itemName user;
        container address { // shorthand syntax 'container address type Address';
          type Address;
          identifier type; // All values should have unique value.
          maxOccurs unbounded;
        }
        property name {
          type PolyString;
        }
        objectReference link {
          targetType Shadow;
          maxOccurs unbounded;
        }
    }
}