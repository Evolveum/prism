model axiom {

    statement statement {
        type Statement;
        argument identifier;
        description """
            Declares statement.
        """;
    }

    complexType Statement {
        property identifier {
            type builtin:Identifier;
        }
        property type {
            type builtin:TypeReference;
        }
        property argument {
            type builtin:ItemPath;
        }
        property description {
            type builtin:DocumentationString;
        }
    }

    statement complexType {
        type ComplexType;
        argument identifier;
    }

    complexType ComplexType {
        property identifier {
            type builtin:Identifier;
        }
        property property {
            type Property;
        }
    }
    
    complexType Property {
        property identifier {
            type builtin:Identifier;
        }
        property type {
            type builtin:TypeReference;
        }
        property required {
            type builtin:boolean;
        }
    }

    statement model {
        type Model;
        argument name;
    }

    statement complexType {
        property identifier {
            type builtin:Identifier;
        }
    }

}