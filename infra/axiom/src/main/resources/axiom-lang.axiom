model axiom-lang {

    type AxiomModel {
        property name { 
            type AxiomIdentifier; 
        }
        
        property type {
            type AxiomTypeDefinition;
        }
        property object {
            type AxiomObjectDefinition;
        }
    }
    
    type AxiomBaseDefinition {
        argument identifier;
        property identifier {
            type AxiomIdentifier;
        }
    }

    type AxiomTypeDefinition {
        argument identifier;
        property identifier {
            type AxiomIdentifier;
        }
        property property {
            type AxiomPropertyDefinition;
        }
        
        container container {
            type AxiomContainerDefinition;
        }
    }

    type AxiomItemDefinition {
        argument identifier;
        property identifier {
            type AxiomIdentifier;
        }
        property type {
            type AxiomIdentifier;
        }
    }

    type AxiomPropertyDefinition {
        extends AxiomItemDefinition;
    }
    
    type AxiomContainerDefinition {
        extends AxiomItemDefinition;
    }

}